// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          String    // ORGANIZER, PARTICIPANT lub ADMIN
  hasBurEntry   Boolean   @default(false) // Czy ma wpis w BUR
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  courses       Course[]
  files         UserFile[]
  purchases     CoursePurchase[] // Zakupione kursy online
  subscription  Subscription? // Subskrypcja miesięczna
  coursePayments CoursePayment[] // Płatności za dodanie kursów
  enrollments   CourseEnrollment[] // Zapisy na kursy
  reviews       CourseReview[] // Recenzje napisane przez użytkownika
  sentMessages  Message[] @relation("MessageSender") // Wiadomości wysłane
  receivedMessages Message[] @relation("MessageReceiver") // Wiadomości otrzymane
  forumPosts    ForumPost[] // Posty na forum
  forumComments ForumComment[] // Komentarze na forum
  consultationsAsTrainer Consultation[] @relation("ConsultationTrainer") // Konsultacje jako trener
  consultationsAsParticipant Consultation[] @relation("ConsultationParticipant") // Konsultacje jako uczestnik
  companyPackages CompanyPackage[] // Pakiety firmowe
}

model Course {
  id            String      @id @default(cuid())
  title         String
  description   String
  type          String      // STACJONARNY lub ONLINE
  price         Float
  fundingInfo   String      // Informacje o dofinansowaniu
  startDate     DateTime
  endDate       DateTime?
  voivodeship   String?     // Województwo (opcjonalne)
  city          String?     // Miasto (opcjonalne)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  // Pola dla kursów online
  isOnlineCourse Boolean   @default(false) // Czy to kurs online do sprzedaży
  onlinePrice    Float?    // Cena kursu online (domyślnie 100 zł)
  commissionRate Float?    // Procent prowizji dla właściciela strony (domyślnie 10%)
  isPublished    Boolean   @default(false) // Czy kurs jest wystawiony na sprzedaż
  videoFiles     CourseVideoFile[] // Pliki wideo kursu online
  
  // Pola dla promocji
  isPromoted     Boolean   @default(false) // Czy kurs jest promowany
  promotionEndDate DateTime? // Data zakończenia promocji
  promotionPrice  Float?    // Cena promocyjna
  
  // Pola dla dofinansowania UE (kursy stacjonarne)
  euFundingPercentage Float?    // Procent dofinansowania UE (np. 95%)
  participantPrice    Float?    // Cena dla uczestnika po dofinansowaniu
  liveCommissionRate  Float?    @default(10) // Prowizja platformy od kursów stacjonarnych (domyślnie 10%)
  onlineDiscountPercentage Float? @default(50) // Zniżka dla kursu online w stosunku do stacjonarnego (domyślnie 50%)
  
  organizerId   String
  organizer     User        @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  files         CourseFile[]
  purchases     CoursePurchase[] // Zakupy kursów online
  payment       CoursePayment? // Płatność za dodanie tego kursu
  enrollments   CourseEnrollment[] // Zapisy na kursy stacjonarne
  reviews       CourseReview[] // Recenzje i oceny
  financialTransactions FinancialTransaction[] // Transakcje finansowe związane z kursem
}

model CourseFile {
  id          String    @id @default(cuid())
  filename    String
  originalName String
  path        String
  size        Int
  mimeType    String
  createdAt   DateTime  @default(now())
  
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model UserFile {
  id          String    @id @default(cuid())
  filename    String
  originalName String
  path        String
  size        Int
  mimeType    String
  createdAt   DateTime  @default(now())
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CourseVideoFile {
  id          String    @id @default(cuid())
  filename    String
  originalName String
  path        String
  size        Int
  mimeType    String
  duration    Int?      // Długość wideo w sekundach
  order       Int       @default(0) // Kolejność odtwarzania
  createdAt   DateTime  @default(now())
  
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model CoursePurchase {
  id          String    @id @default(cuid())
  purchaseDate DateTime @default(now())
  price       Float     // Cena zakupu
  commission  Float     // Prowizja dla właściciela strony
  
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id                  String    @id @default(cuid())
  userId              String    @unique
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  status              String    // ACTIVE, CANCELLED, EXPIRED
  startDate           DateTime  @default(now())
  endDate             DateTime  // Data wygaśnięcia subskrypcji
  monthlyPrice        Float     @default(29.99) // Cena miesięczna w PLN
  stripeSubscriptionId String?  // ID subskrypcji w Stripe (opcjonalnie)
  stripeCustomerId    String?   // ID klienta w Stripe (opcjonalnie)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model CoursePayment {
  id            String    @id @default(cuid())
  amount        Float     @default(100.0) // Kwota płatności za dodanie kursu (100 PLN)
  status        String    // PENDING, COMPLETED, FAILED
  paymentDate   DateTime  @default(now())
  stripePaymentId String?  // ID płatności w Stripe (opcjonalnie)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId      String?   @unique // Opcjonalne - ustawiane po utworzeniu kursu
  course        Course?   @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// Zapisy na kursy stacjonarne
model CourseEnrollment {
  id          String    @id @default(cuid())
  status      String    @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  enrolledAt  DateTime  @default(now())
  notes       String?   // Opcjonalne notatki
  
  // Pola finansowe dla kursów stacjonarnych
  participantPricePaid Float?    // Cena zapłacona przez uczestnika
  commissionAmount    Float?     // Prowizja platformy
  organizerEarnings   Float?     // Przychód organizatora
  
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([courseId, userId]) // Użytkownik może zapisać się tylko raz na kurs
}

// Recenzje i oceny kursów
model CourseReview {
  id          String    @id @default(cuid())
  rating      Int       // Ocena 1-5
  comment     String?   // Opcjonalny komentarz
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([courseId, userId]) // Użytkownik może ocenić kurs tylko raz
}

// Wiadomości między użytkownikami (Komunikator)
model Message {
  id          String    @id @default(cuid())
  content     String
  isRead      Boolean   @default(false)
  createdAt   DateTime  @default(now())
  
  senderId    String
  sender      User      @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId  String
  receiver    User      @relation("MessageReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
}

// Posty na forum
model ForumPost {
  id          String    @id @default(cuid())
  title       String
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments    ForumComment[]
  
  @@index([createdAt])
}

// Komentarze do postów na forum
model ForumComment {
  id          String    @id @default(cuid())
  content     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  postId      String
  post        ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@index([postId])
}

// Konsultacje 1:1
model Consultation {
  id            String    @id @default(cuid())
  title         String    // Tytuł konsultacji
  description   String?   // Opis konsultacji
  pricePerHour  Float     // Cena za godzinę (ustalana przez trenera)
  duration      Int       // Czas trwania w minutach
  scheduledDate DateTime  // Data i godzina konsultacji
  status        String    @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  videoCallLink String?   // Link do video call (generowany po potwierdzeniu)
  notes         String?   // Opcjonalne notatki
  
  // Prowizja platformy
  commissionRate Float     @default(10) // Procent prowizji (domyślnie 10%)
  commissionAmount Float?  // Kwota prowizji
  organizerEarnings Float? // Przychód trenera
  
  trainerId     String
  trainer       User      @relation("ConsultationTrainer", fields: [trainerId], references: [id], onDelete: Cascade)
  participantId String
  participant   User      @relation("ConsultationParticipant", fields: [participantId], references: [id], onDelete: Cascade)
  financialTransactions FinancialTransaction[] // Transakcje finansowe
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([trainerId])
  @@index([participantId])
  @@index([scheduledDate])
}

// Pakiety premium dla firm
model CompanyPackage {
  id            String    @id @default(cuid())
  companyName   String    // Nazwa firmy
  contactEmail  String    // Email kontaktowy
  contactPhone  String?   // Telefon kontaktowy
  packageType   String    // BASIC, PREMIUM, ENTERPRISE
  price         Float     // Cena pakietu
  duration      Int       // Czas trwania w miesiącach
  maxUsers      Int       // Maksymalna liczba użytkowników
  features      String?   // JSON z listą funkcji
  
  status        String    @default("PENDING") // PENDING, ACTIVE, EXPIRED, CANCELLED
  startDate     DateTime?
  endDate       DateTime?
  
  // Prowizja platformy
  commissionRate Float     @default(10) // Procent prowizji
  commissionAmount Float?  // Kwota prowizji
  organizerEarnings Float? // Przychód organizatora
  
  organizerId   String
  organizer     User      @relation(fields: [organizerId], references: [id], onDelete: Cascade)
  financialTransactions FinancialTransaction[] // Transakcje finansowe
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([organizerId])
  @@index([status])
}

// Transakcje finansowe - śledzenie wszystkich przychodów i prowizji
model FinancialTransaction {
  id            String    @id @default(cuid())
  transactionType String  // COURSE_LIVE, COURSE_ONLINE, CONSULTATION, COMPANY_PACKAGE, SUBSCRIPTION
  amount        Float     // Kwota transakcji
  commission    Float     // Prowizja platformy
  organizerEarnings Float  // Przychód organizatora/trenera
  status        String    @default("PENDING") // PENDING, COMPLETED, FAILED, REFUNDED
  
  // Referencje do powiązanych encji
  courseId      String?
  course        Course?   @relation(fields: [courseId], references: [id], onDelete: SetNull)
  consultationId String?
  consultation  Consultation? @relation(fields: [consultationId], references: [id], onDelete: SetNull)
  companyPackageId String?
  companyPackage CompanyPackage? @relation(fields: [companyPackageId], references: [id], onDelete: SetNull)
  enrollmentId  String?   // ID zapisu na kurs stacjonarny
  purchaseId    String?   // ID zakupu kursu online
  
  organizerId   String    // ID organizatora/trenera
  participantId String?   // ID uczestnika (opcjonalne)
  
  paymentDate   DateTime? // Data płatności
  paymentMethod String?   // Metoda płatności (STRIPE, TRANSFER, etc.)
  paymentReference String? // Referencja płatności (ID z systemu płatności)
  
  notes         String?   // Opcjonalne notatki
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([organizerId])
  @@index([transactionType])
  @@index([status])
  @@index([paymentDate])
}
